<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Chinese</th>
      <th>Japanese</th>
      <th>Pinyin</th>
      <th>Correct count</th>
      <th>Incorrect count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.chinese %></td>
        <td><%= card.japanese %></td>
        <td><%= card.pinyin %></td>
        <td><%= card.correct_count %></td>
        <td><%= card.incorrect_count %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_card_path %>
